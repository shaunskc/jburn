<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/jwebapp.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block pageheader %}
            <div id="header">
                <div id="user-box">
                    {% if app.user %}
                    <ul>
                        <li>Logged in as <a href="{{ url("fos_user_profile_show") }}">{{ app.user.username }}</a></li>
                        <li><a href="{{ url("fos_user_security_logout") }}">Logout</a></li>
                    </ul>
                    {% elseif not app.user %}
                        <a href="{{ url("fos_user_security_login") }}">Log In</a>
                    {% endif %}
                </div>
                <div id="site-title">
                    <a href="{{ url("homepage") }}">JWebApp</a>
                </div>
            </div>
        {% endblock %}
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
