<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.css') }}">
            <link rel="stylesheet" href="{{ asset('css/jwebapp.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block pageheader %}
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="navbar-inner">
                    <div class="container">
                        <div class="nav-collapse collapse">
                                <div class="navbar-text pull-right">
                                {% if app.user %}
                                    Logged in as <a class="navbar-link" href="{{ url("fos_user_profile_show") }}">{{ app.user.username }}</a>
                                    <a class="btn btn-danger" href="{{ url("fos_user_security_logout") }}">Logout</a>
                                {% elseif not app.user %}
                                    <a class="btn btn-success" href="{{ url("fos_user_security_login") }}">Log In</a>
                                    <a class="btn btn-primary" href="{{ url("fos_user_registration_register") }}">Create an Account</a>
                                {% endif %}
                            </div>
                        <a class="brand" href="{{ url("homepage") }}">JWebApp</a>
                        </div>
                    </div>
                </div>
            </div>
                      
            {% if dictionarySearchForm|default(null) %}
            <div class="container">
                {% include('@Dictionary/searchForm.html.twig') %}
            </div>
            {% endif %}
                        
        {% endblock %}
        <div class="container">
            {% block body %}{% endblock %}
        </div>
        {% block footer %}
            <hr>
            <footer>
                <div class="container">
                    <p>JWebApp.</p>
                </div>
            </footer>
        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
